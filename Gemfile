source "https://rubygems.org"

# GitHub Pages - includes Jekyll and all supported dependencies
gem "github-pages", group: :jekyll_plugins

# Platform-specific gems
gem "tzinfo-data", platforms: [:mingw, :mswin, :x64_mingw, :jruby]
gem "wdm", "~> 0.1.0", platforms: [:mingw, :x64_mingw, :mswin]

# Jekyll plugins
group :jekyll_plugins do
  gem "jekyll-paginate"        # Pagination for blog posts
  gem "jekyll-sitemap"         # Generate sitemap.xml
  gem "jekyll-gist"            # Embed GitHub gists
  gem "jekyll-feed"            # Generate RSS/Atom feed
  gem "jemoji"                 # GitHub-flavored emoji support
  gem "jekyll-include-cache"   # Cache includes for faster builds
  gem "jekyll-seo-tag"         # SEO optimization (ADDED)
  gem "jekyll-archives"        # Category/tag archive pages (ADDED)
end
